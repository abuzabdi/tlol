<!DOCTYPE html>
<html>
<head>
  <title>TLOL</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
   <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
   <%= favicon_link_tag 'http://www.katyisd.org/campus/KDE/PublishingImages/Pages/ELA-Instructional-Resources/t2.png' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="sidebar">
    <ul>
      <li class="category"><%= link_to "TLOL", root_path %></li>
      <li><%= link_to "Posts", root_path %></li>
      <li><%= link_to "About", about_path %></li>
    </ul>
    
    <% if !user_signed_in? %>
      <p class="sign_in"><%= link_to "User Login", new_user_session_path %></p>
    <% end %>
    
  </div>

  <div id="main_content">
  	<div id="header">
    <% if current_page?(root_path) %>
      <p>Post Feeed</p>
        <% elsif current_page?(about_path) %>
          <p>My Site</p>
        <%else %>
          <%= link_to "Back to Post Feed", root_path %>
        <% end %>
        <% if user_signed_in? %>
  		
    			<div class="buttons">
                  <%= link_to '<button type="button">New Post</button>'.html_safe, new_post_path %>
                  <%= link_to '<button type="button">Sign Out</button>'.html_safe, destroy_user_session_path, method: :delete %>
    			</div>
        <% end %>
  	</div>

  	<% flash.each do |name, msg| %>
  		<%= content_tag(:div, msg, class: "alert") %>
  	<% end %>


	<%= yield %>


  </div>

</body>
</html>
